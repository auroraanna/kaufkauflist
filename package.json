{
	"name": "kaufkauflist",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		// Build the project to HTML files, etc.
		"build": "vite build",
		// Start the database.
		"db": "pocketbase serve",
		// Run the development webserver with the files from build.
		"dev": "caddy run",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "next",
		"@sveltejs/kit": "next",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"svelte": "^3.44.0",
		"svelte-check": "^2.7.1",
		"typescript": "^4.7.4",
		"vite": "^3.1.0",
		"pocketbase": "^0.8.0"
	},
	"type": "module"
}
